<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_user_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:paddingTop="20dp">

    <TextView
            android:id="@+id/employee_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_name"
            style="@style/employee_name_text"
            android:textColor="@color/background_dark_gray"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:id="@+id/employee_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/default_email"
            style="@style/employee_email_text"
            android:textColor="@color/background_dark_gray"
            app:layout_constraintTop_toBottomOf="@id/employee_name_text_view"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/employee_job_level_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_name"
            style="@style/employee_name_text"
            android:textColor="@color/background_dark_gray"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/employee_job_department_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/default_email"
            style="@style/employee_email_text"
            android:textColor="@color/background_dark_gray"
            app:layout_constraintTop_toBottomOf="@id/employee_job_level_text_view"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:id="@+id/employee_business_unit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/default_email"
            style="@style/employee_email_text"
            android:textColor="@color/background_dark_gray"
            app:layout_constraintTop_toBottomOf="@id/employee_job_department_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>