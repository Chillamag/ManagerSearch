<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>S

    <style name="search_title_text">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/kontrapunkt_bold</item>
        <item name="android:textColor">@color/background_dark_gray</item>
    </style>

    <style name="employee_name_text">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/kontrapunkt_bold</item>
        <item name="android:textColor">@color/background_dark_gray</item>
    </style>

    <style name="employee_email_text">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/kontrapunkt_light</item>
        <item name="android:textColor">@color/background_dark_gray</item>
    </style>

    <style name="edit_text_floating_label" >
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/background_dark_gray</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/background_dark_gray</item>
        <item name="colorControlNormal">@color/background_dark_gray</item>
        <item name="colorControlActivated">@color/background_dark_gray</item>
    </style>

</resources>
